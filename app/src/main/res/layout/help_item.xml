<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/pale_grey"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/helpImages"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/helpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/officinasans"
        android:gravity="center"
        tools:text="TextView"
        android:textColor="@color/light_olive_green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/helpImages"
        app:layout_constraintStart_toStartOf="@+id/helpImages"
        app:layout_constraintTop_toBottomOf="@+id/helpImages" />
</androidx.constraintlayout.widget.ConstraintLayout>
