<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/friends_item_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_image1" />

    <TextView
        android:id="@+id/friends_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/friends_item_image"
        app:layout_constraintStart_toEndOf="@+id/friends_item_image"
        app:layout_constraintTop_toTopOf="@+id/friends_item_image"
        tools:text="Имя друга" />
</androidx.constraintlayout.widget.ConstraintLayout>